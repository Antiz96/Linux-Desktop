#
# ~/.bashrc
#

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

##Prompt##

# White if TMUX is not running
if [ -z "${TMUX}" ]; then
        PS1="[\u@\h \W]\$ "
# Agnoster bash theme if TMUX is running
else
	export THEME="${HOME}/.bash/themes/agnoster-bash/agnoster.bash"
	if [ -f "${THEME}" ]; then
		source "${THEME}"
	fi
fi

##Tmux autostart##

if [ -x "$(command -v tmux)" ] && [ -n "${DISPLAY}" ]; then
        [ -z "${TMUX}" ] && (tmux attach || tmux) >/dev/null 2>&1
fi

##Bind##

bind "TAB:menu-complete"
bind '"\e[Z": menu-complete-backward'
bind "set show-all-if-ambiguous on"
bind "set menu-complete-display-prefix on"
bind "set colored-stats on"

##Env var##

# Editor
export EDITOR="/usr/bin/vim"

# SSH Agent
export SSH_AUTH_SOCK="${XDG_RUNTIME_DIR}/ssh-agent.socket"

# GPG TTY
export GPG_TTY="$(tty)"

# Flatpak path
export PATH="${PATH}:/var/lib/flatpak/exports/bin"

##Alias##

# Ls
alias ls="ls --color=auto"
alias ll="ls -ltrh"
alias l="ls -ltrhA"

# Grep
alias grep="grep --color=auto"

# Manipulating files
alias mv="mv -i"
alias cp="cp -i"
alias ln="ln -i"
alias rm="rm -i"

# Editor
alias vi="vim"

# Package manager
alias update="sudo apt update"
alias upgrade="sudo apt update && sudo apt upgrade"
alias fullupgrade="sudo apt update && sudo apt full-upgrade && flatpak update"
alias install="sudo apt install"
alias remove="sudo apt remove"
alias purge="sudo apt purge"
alias search="apt search"
alias pkglist="apt list --installed"
alias cleancache="sudo apt clean"
alias cleanorphans="sudo apt autoremove --purge"

# Tmux
alias tkill="tmux kill-session -t"
alias tswitch="tmux a -t"

# Sudo
alias sudo="sudo "
