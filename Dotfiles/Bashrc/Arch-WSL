#
# ~/.bashrc
#

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

##Prompt##

# White if TMUX is not running
if [ -z "${TMUX}" ]; then
        PS1="[\u@\h \W]\$ "
# Agnoster bash theme if TMUX is running
else
        export THEME="${HOME}/.bash/themes/agnoster-bash/agnoster.bash"
        if [ -f "${THEME}" ]; then
                source "${THEME}"
        fi
fi

##Tmux autostart##

[ -x "$(command -v tmux)" ] \
  && [ -z "${TMUX}" ] \
  && (tmux attach || tmux) >/dev/null 2>&1

##Bind##

bind "TAB:menu-complete"
bind '"\e[Z": menu-complete-backward'
bind "set show-all-if-ambiguous on"
bind "set menu-complete-display-prefix on"
bind "set colored-stats on"

##Env var##

# Editor
export EDITOR="/usr/bin/vim"

# SSH Agent
export SSH_AUTH_SOCK="${XDG_RUNTIME_DIR}/ssh-agent.socket"

##Symlinks for WSLg##

[ ! -L /tmp/.X11-unix ] && ln -s /mnt/wslg/.X11-unix/* /tmp/.X11-unix
[ ! -L "${XDG_RUNTIME_DIR}/pulse" ] && ln -s "/mnt/wslg/runtime-dir/pulse" "${XDG_RUNTIME_DIR}/pulse"
[ ! -L "${XDG_RUNTIME_DIR}/wayland-0" ] && ln -s "/mnt/wslg/runtime-dir/wayland-0" "${XDG_RUNTIME_DIR}/wayland-0"
[ ! -L "${XDG_RUNTIME_DIR}/wayland-0.lock" ] && ln -s "/mnt/wslg/runtime-dir/wayland-0.lock" "${XDG_RUNTIME_DIR}/wayland-0.lock"

##Alias##

# Ls
alias ls="ls --color=auto"
alias ll="ls -ltrh"
alias l="ls -ltrhA"

# Grep
alias grep="grep --color=auto"

# Manipulating files
alias mv="mv -i"
alias cp="cp -i"
alias ln="ln -i"
alias rm="rm -i"

# Editor
alias vi="vim"

# Package manager
alias update="sudo pacman -Syy"
alias upgrade="sudo pacman -Syu"
alias fullupgrade="sudo pacman -Syu && paru -Syu"
alias install="sudo pacman -S"
alias remove="sudo pacman -Rns"
alias pkglist="pacman -Q"
alias pkgaurlist="pacman -Qm"
alias pkginfo="pacman -Qi"
alias pkgsearch="pacman -Ss"
alias pkgfile="pacman -Qo"
alias pkgfilesearch="pacman -F"
alias pkgfilelist="pacman -Ql"
alias pkgfilelistsearch="pacman -Fl"
alias cleancache="sudo pacman -Sc"
alias cleanaurcache="paru -Sc"
alias cleanorphans="pacman -Qtdq | sudo pacman -Rns -"

# Tmux
alias tkill="tmux kill-session -t"
alias tswitch="tmux a -t"

# Fix for Distrobox / Docker in WSL <-- https://wiki.archlinux.org/title/Install_Arch_Linux_on_WSL#Failure_when_running_Docker_containers
alias distrobox-repair="sudo mount --make-rshared /"

# Sudo
alias sudo="sudo "
